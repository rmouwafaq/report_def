<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--   pos.details -->

        <record id="view_assistant_report" model="ir.ui.view">
            <field name="name">assistant Report</field>
            <field name="model">report_def.assistant_report</field>
            <field name="arch" type="xml">
                <form string="assistant Report" version="7.0">
                    <group col="4" string="Dates">
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <field name="user_ids"/>
                    <footer>
                        <button name="print_report" type="object" string="Print Report" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_assistant_report" model="ir.actions.act_window">
            <field name="name">assistant Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report_def.assistant_report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <!-- <menuitem name="assistant" id="config_assist" parent="rep_config" sequence="1" action="action_assistant_report" /> -->


    </data>
</openerp>
