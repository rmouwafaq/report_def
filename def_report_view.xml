<?xml version="1.0" encoding="UTF-8"?>

<openerp>

	<data> 
		<!-- views Form -->
		
		
		<record model="ir.ui.view" id="field_def_form">
			<field name="name">report.def.field.form</field>
			<field name="model">report.def.field</field>
			<field name="arch" type="xml">		
		
				<form version="7.0" string="Field">
					<group col="2">
						<group>
							<field name="template_id"/>
							<field name="name"/>
							<field name="sequence"/>
							<field name="group"/>
						</group>
						<group>
							<field name="section"/>
							<field name="source_data"/>
							<field name="field_type"/>
							<field name="total_id"/>
							
						</group>
						
					</group>
					<group>
						<field name="expression" />
					</group>
				</form>
			
			</field>
		
		</record>
		
		
		
		<record model="ir.ui.view" id="report_def_field_total_form">

			<field name="name">report.def.field.total.form</field>
			<field name="model">report.def.field.total</field>
			<field name="arch" type="xml">
				<form version="7.0" string="Totals">
					<group col="2">
						<field name="name"/>
						<field name="function"/>
						<field name="reset_after_print"/>
						<field name="reset_repeat_section"/>
					</group>
				</form>
			</field>
		</record>

		
		
		<record model="ir.ui.view" id="report_def_form">
			<field name="name">report.def.form</field>
			<field name="model">report.def</field>
			<field name="arch" type="xml">
				<form version="7.0" string="Reports">
					<group col="2">
						<group>
							<field name="name"/>
							<field name="title"/>
							<field name="format"/>
							<field name="type"/>
						</group>
						
						<group>
							<field name="module_id"/>
							<field name="template_file_name"/>
							<field name="json_file_name"/>
							<field name="auto_generate" />
						</group>
					</group>
		
		
					<notebook colspan="3">
						<page string="Fields">
							<field name="field_ids"/>
						</page>
						<page string="Sections">
							<field name="section_bloc_ids"/>
						</page>
						<page string="Totals">
							<field name="total_ids"/>
						</page>
						<page string="Query">
							<field name="query"/>
						</page>
						<page string="Template">
							<h1>Script HTML :</h1>
							<field name="template_html"/>
						</page>
					</notebook>
		
				</form>
		
			</field>
		
		</record>
		
		<record model="ir.ui.view" id="report_section_bloc_form">
		
			<field name="name">report.section.bloc.form</field>
			<field name="model">report.section.bloc</field>
			<field name="arch" type="xml">
				<form string="Section">
					<field name="section"/>
					<field name="max_bloc_number"/>
				</form>
		
			</field>
		
		</record>
		
		<!-- views tree -->
		
		<record  model="ir.ui.view" id="report_def_field_total_tree">
			<field name="name">report.def.field.total.tree</field>
			<field name="model">report.def.field.total</field>
			<field name="arch" type="xml">
				<tree version="7.0" string="Total fields" >
						<field name="name"/>
						<field name="function"/>
						<field name="reset_after_print"/>
						<field name="reset_repeat_section"/>
				</tree>
			</field>
		</record>
		
		
		<record model="ir.ui.view" id="field_def_tree">
		
			<field name="name">report.def.field.tree</field>
			<field name="model">report.def.field</field>
			<field name="arch" type="xml">
				<tree string="Definition champs">
					<field name="template_id"/>
					<field name="name"/>
					<field name="sequence"/>
					<field name="section"/>
					<field name="source_data"/>
					<field name="field_type"/>
					<field name="total_id"/>
				</tree>
		
			</field>
		
		</record>
		
		
		<record model="ir.ui.view" id="report_def_tree">
			<field name="name">report.def.tree</field>
			<field name="model">report.def</field>
			<field name="arch" type="xml">
				<tree string="Definition Report">
					<field name="name"/>
					<field name="title"/>
					<field name="module_id"/>
					<field name="format"/>
					<field name="template_file_name"/>
				</tree>
		
			</field>
		
		</record>
		
		<record model="ir.ui.view" id="report_section_bloc_tree">
		
			<field name="name">report.section.bloc.tree</field>
			<field name="model">report.section.bloc</field>
			<field name="arch" type="xml">
				<tree string="Section">
					<field name="section"/>
					<field name="max_bloc_number"/>
				</tree>
		
			</field>
		
		</record>
		
	</data>

</openerp>